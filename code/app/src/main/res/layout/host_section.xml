<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/custom_background"
    android:elevation="4dp">

    <!-- 제목 -->
    <TextView
        android:id="@+id/hostInfoTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Host's Information"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <!-- 프로필 이미지와 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- 호스트 프로필 이미지 -->
        <ImageView
            android:id="@+id/hostProfileImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_location"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <!-- 호스트 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hostNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Craig"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/hostJoinedDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined in July 2014"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- 호스트 설명 -->
    <TextView
        android:id="@+id/hostDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I will be available on site. Contact via text, phone, or Airbnb."
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <!-- 호스트 추가 정보 -->
    <TextView
        android:id="@+id/hostLanguageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language: English"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/hostResponseRateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response rate: 100%"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/hostResponseTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response time: within an hour"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- "Contact Host" 버튼 -->
    <Button
        android:id="@+id/contactHostButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Host"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white" />
</LinearLayout>
