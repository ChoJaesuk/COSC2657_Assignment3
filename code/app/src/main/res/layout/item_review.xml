<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- User Profile Image -->
    <ImageView
        android:id="@+id/reviewUserImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/default_host_image"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_background" />

    <!-- Review Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Username and Rating -->
        <TextView
            android:id="@+id/reviewUserTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username ★★★★★"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Review Date -->
        <TextView
            android:id="@+id/reviewDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-01-01"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Feedback -->
        <TextView
            android:id="@+id/reviewContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the review content."
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>
