<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_card_background"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="4dp">

    <!-- Image with Status -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <!-- Property Image -->
        <ImageView
            android:id="@+id/bookingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/bookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/rounded_badge"
            android:text="Pending"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Booking Details -->
    <TextView
        android:id="@+id/bookingPropertyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Name"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/bookingPropertyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Details"
        android:textColor="@color/dark_blue"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/bookingDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Booking Dates"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="end">

        <!-- Manage Button -->
        <Button
            android:id="@+id/manageBookingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Manage"
            style="@style/BlueButton"
            app:backgroundTint="@null"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Review Button -->
        <Button
            android:id="@+id/reviewBookingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Review"
            style="@style/BlueButton"
            app:backgroundTint="@null"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
