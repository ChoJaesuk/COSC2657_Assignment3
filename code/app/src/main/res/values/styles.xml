<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item> <!-- Disable caps -->
    </style>
    <style name="RedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="GreenButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="GreyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- 앱 테마 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>


    <!-- 커스텀 액션바 스타일 -->
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_black</item> <!-- 검정색 백버튼 -->
        <item name="android:logo">@drawable/logo</item> <!-- 로고 이미지 -->
    </style>

    <!-- 액션바 타이틀 스타일 -->
    <style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- in case the button needs shadow add these two lines -->
    <!--
    <item name="android:elevation">15dp</item>
    <item name="android:stateListAnimator">@null</item>
    -->
</resources>
