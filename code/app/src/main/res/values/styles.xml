<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item> <!-- Disable caps -->
    </style>
    <style name="RedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="GreenButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="GreyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- 기존 앱 스타일 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- 커스텀 액션바 스타일 -->
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/teal_200</item>
        <item name="android:background">@color/teal_200</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
    </style>

    <!-- 액션바 타이틀 스타일 -->
    <style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- in case the button needs shadow add these two lines -->
    <!--
    <item name="android:elevation">15dp</item>
    <item name="android:stateListAnimator">@null</item>
    -->
</resources>
